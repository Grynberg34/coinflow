<body>

    <main>
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">

                <div class="menu" role="menu">

                    <div class="row">
                        <div class="col-md-4"><a role="menuitem" href="/"><img class="menu__logo" src="/images/logo.png" alt="Logo da coinflow"></a></div>
                        <div class="col-md-4"><h1 class="menu__title">{{nome}}</h1></div>
                        <div class="col-md-2"><a role="menuitem" href="/admin/{{user_id}}/enviar" class="menu__link">voltar</a></div>
                        <div class="col-md-2"><a role="menuitem" href="/logout" class="menu__link">sair</a></div>
                    </div>

                    <div class="row menu__options">

                        <a class="col-5 menu__options__link" href="/user/{{user_id}}/recompensas/visualizar">
                            <div class="menu__options__option" id="liberar">
                                <i class="flaticon-gift-box-with-a-bow menu__options__option__icon"></i>
                                <h1 class="menu__options__option__title">recompensas</h1>
                            </div>
                        </a>

                        <div class="col-2"></div>
                        <a class="col-5 menu__options__link" href="/user/{{user_id}}/recompensas/resgates">
                            <div class="menu__options__option" id="liberar">
                                <i class="flaticon-get-gifts menu__options__option__icon"></i>
                                <h1 class="menu__options__option__title">meus resgates</h1>
                            </div>
                        </a>
                    </div>

                    <a href="/" class="menu__link mobile__link">menu</a>
                    <a href="/logout" class="menu__link mobile__link sair">sair</a>

                </div>

            </div>
        </div>
    </main>




